
<div class = "container">
    <%= form_with model:@ctform, url: landing_path do |form| %>
        <% if @ctform.errors.any? %>
            <div class = "alert alert-danger">
                <% @ctform.errors.full_messages.each do |message| %>
                <div><%= message %> </div>
                <% end %>
            </div>
        <% end %>
        <div class = "mb-3">
            <h4><%= form.label :name %></h4>
            <%= form.text_field :name, class: "form-control", placeholder: "Juan Dela Cruz" %>
        </div>
        <div class = "mb-3">
            <h4><%= form.label :email %></h4>
            <%= form.text_field :email, class: "form-control", placeholder: "example@example.com" %>
        </div>
        <div class = "mb-3">
            <h4><%= form.label :contact_number %></h4>
            <%= form.text_field :contact_number, class: "form-control", placeholder: "09171234567 or +639171234567" %>
        </div>
            <%= form.hidden_field :user_id, value: Current.user.id %>
        <div class="mb-3">
            <%= form.submit "Submit Contact Tracing Form", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>